      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label htmlFor="price" class="block text-sm font-medium text-gray-700">
            Precio ($)
          </label>
          <input type="number" name="price" id="price" step="0.01" class="p-2 mt-1 focus:ring-red-800 focus:border-red-800 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required="" />
