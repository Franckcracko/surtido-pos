<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900">Configuración</h1>
    <form action="/api/auth/logout" method="POST">
      <button type="submit" class="text-sm text-white bg-red-500 px-4 py-2 rounded hover:bg-red-600">
        Cerrar sesión
      </button>
    </form>
  </div>

  <div class="bg-white p-4 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-800 mb-4">Información usuario</h2>
    <div class="space-y-2">
      <p><strong>Nombre:</strong> <%= user.username %></p>
      <p><strong>Correo electrónico:</strong> <%= user.email %></p>
    </div>
  </div>
  <!-- Configuración -->
  <div class="bg-white p-4 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-800 mb-4">Opciones de configuración</h2>
    <ul class="space-y-3">
      <li>
        <button data-modal-target="password-modal" data-modal-toggle="password-modal" type="button" class="cursor-pointer text-blue-500 hover:underline">Cambiar contraseña</button>
      </li>
      <li>
        <button data-modal-target="add-user-modal" data-modal-toggle="add-user-modal" type="button" class="cursor-pointer text-blue-500 hover:underline">Agregar usuario</button>
      </li>
    </ul>
  </div>
  <button type="button" id="delete-user" class="text-sm text-white bg-red-500 mt-4 px-4 py-2 rounded hover:bg-red-600">
    Borrar Cuenta
  </button>
</div>

<div id="password-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative p-4 w-full max-w-md max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600 border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
          Actualizar contraseña
        </h3>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="password-modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Cerrar modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <form id="update-password" class="p-4 md:p-5">
        <div class="flex gap-4 items-center">
          <div class="flex flex-1 flex-col mb-4">
            <label for="password" class="text-left mb-2 text-sm font-medium text-gray-900 dark:text-white">Nueva contraseña</label>
            <input type="text" name="password" id="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-600 focus:border-red-600 p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-red-500 dark:focus:border-red-500" required="">
          </div>
          <div>
            <button id="generate-password" type="button" class="inline-flex items-center hover:bg-gray-200 text-black focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center">
              Generar contraseña
            </button>
          </div>
        </div>
        <button type="submit" class="text-white inline-flex items-center bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800 disabled:bg-gray-400">
          Actualizar
        </button>
      </form>
    </div>
  </div>
</div>

<div id="add-user-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative p-4 w-full max-w-md max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600 border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
          Crear nuevo usuario
        </h3>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="add-user-modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Cerrar modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <form id="add-user" class="p-4 md:p-5">
        <div class="flex flex-col mb-4">
          <label for="username-new-user" class="text-left mb-2 text-sm font-medium text-gray-900 dark:text-white">Nombre de usuario</label>
          <input type="text" name="username-new-user" id="username-new-user" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-600 focus:border-red-600 p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-red-500 dark:focus:border-red-500" required="">
        </div>
        <div class="flex flex-col mb-4">
          <label for="email-new-user" class="text-left mb-2 text-sm font-medium text-gray-900 dark:text-white">Correo electronico</label>
          <input type="email" name="email-new-user" id="email-new-user" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-600 focus:border-red-600 p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-red-500 dark:focus:border-red-500" required="">
        </div>
        <div class="flex gap-4 items-center">
          <div class="flex flex-1 flex-col mb-4">
            <label for="password-new-user" class="text-left mb-2 text-sm font-medium text-gray-900 dark:text-white">Nueva contraseña</label>
            <input type="text" name="password-new-user" id="password-new-user" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-600 focus:border-red-600 p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-red-500 dark:focus:border-red-500" required="">
          </div>
          <div>
            <button id="generate-password-new-user" type="button" class="inline-flex items-center hover:bg-gray-200 text-black focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center">
              Generar contraseña
            </button>
          </div>
        </div>
        <button type="submit" class="text-white inline-flex items-center bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800 disabled:bg-gray-400">
          Agregar
        </button>
      </form>
    </div>
  </div>
</div>