<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900">Categorías</h1>
    <a href="/dashboard/categories/add" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-800 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-800">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 mr-2">
        <path d="M5 12h14" />
        <path d="M12 5v14" />
      </svg>
      Agregar categoría
    </a>
  </div>

  <div class="bg-white p-4 rounded-lg shadow">
    <form method="get" class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
      <div class="flex-1">
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Buscar Categorías
        </label>
        <div class="relative">
          <input type="text" name="name" class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-red-800 focus:border-red-800 sm:text-sm" placeholder="Buscar por nombre..." />
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5 text-gray-400">
              <path d="m21 21-4.34-4.34" />
              <circle cx="11" cy="11" r="8" />
            </svg>
          </div>
        </div>
      </div>
      <div class="flex items-center">
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-800 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-800">
          Buscar
        </button>
      </div>
    </form>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% const colors = [
      'bg-red-800',
      'bg-amber-700',
      'bg-rose-700',
      'bg-blue-700',
      'bg-purple-700'
    ]; %>

    <% categories.forEach((category, index) => { %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="<%= colors[index % colors.length] %> h-24 flex items-center justify-center">
        <span class="text-white text-xl font-bold"><%= category.name %></span>
      </div>
      <div class="p-5">
        <div class="flex justify-between items-center mb-4">
          <span class="text-sm text-gray-500">Productos <%= category.products.length %></span>
          <span class="px-2 py-1 <%= category.active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>  text-xs rounded-full"><%= category.active ? 'Activo': 'Inactivo' %></span>
        </div>
        <p class="text-gray-600 text-sm mb-4"><%= category.description || 'Sin descripción' %></p>
        <div class="flex justify-between items-center">
          <button class="inline-flex items-center px-3 py-1 border text-sm font-medium rounded-md <%= category.active ? 'border-red-300 text-red-700 hover:bg-red-50' : 'border-green-300 text-green-700 hover:bg-green-50' %> bg-white focus:outline-none update-status-category-btn" data-id="<%= category.id %>" data-status="<%= category.active %>">
            <%= category.active ? 'Desactivar': 'Activar' %>
          </button>
          <button class="inline-flex items-center px-3 py-1 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none delete-category-btn" data-id="<%= category.id %>">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 mr-1">
              <path d="M3 6h18" />
              <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" />
              <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" />
              <line x1="10" x2="10" y1="11" y2="17" />
              <line x1="14" x2="14" y1="11" y2="17" />
            </svg>
            Delete
          </button>
        </div>
      </div>
    </div>
    <% }) %>

    <div class="bg-white rounded-lg shadow overflow-hidden border-2 border-dashed border-gray-300 flex items-center justify-center">
      <div class="text-center p-6">
        <div class="mx-auto h-12 w-12 bg-gray-100 rounded-full flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-gray-600">
            <path d="M5 12h14" />
            <path d="M12 5v14" />
          </svg>
        </div>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Agregar nueva categoría</h3>
        <p class="mt-1 text-sm text-gray-500">Crea una nueva categoría para tus productos</p>
        <div class="mt-3">
          <a href="/dashboard/categories/add" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-800 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-800">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4 mr-2">
              <path d="M5 12h14" />
              <path d="M12 5v14" />
            </svg>
            Nueva Categoría
          </a>
        </div>
      </div>
    </div>
  </div>
</div>